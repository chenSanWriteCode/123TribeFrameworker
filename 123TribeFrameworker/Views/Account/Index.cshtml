@using _123TribeFrameworker.Models
@model IEnumerable<ApplicationUser>
@{
    ViewBag.title = "用户管理";
}
<div class="panel panel-primary">
    <div class="panel-heading" style="text-align:center">用户管理 </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
            {
                    <tr>
                        <td colspan="3" style="text-align:center">
                            No Users
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>
                                @using (Html.BeginForm("delete", "Account", new { id = item.Id }))
                                {
                                    @Html.ActionLink("修改","edit",new { userID = item.Id },new { @class="btn btn-warning"})
                                    <button type="submit" class="btn btn-danger">删除</button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
   
</div>
@Html.ActionLink("创建用户", "Register", "Account", new { @class = "btn btn-primary col-md-1" })

