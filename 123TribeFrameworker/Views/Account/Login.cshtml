@using _123TribeFrameworker.Models
@model LoginViewModel
@{
    ViewBag.Title = "123Tirbe";
    Layout = null;
}
<!doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/zuiCSS")
    @Scripts.Render("~/bundles/zuiJS")
    <script type="text/javascript">
        $(function () {

            //$(':label').addClass('col-md-2')
            //$(':text').addClass("col-md-2")
            //$(':password').addClass('col-md-3')
        })

    </script>
</head>
<body>
    <!--style="background-image: url('../../Content/Login.jpg');"-->
    <div>
        @Html.ValidationMessage("ErrMessage", new { style = "color:red" })
        <form action="~/Account/Login" method="post" style="width:30%;margin:30%" class="container">
            @Html.AntiForgeryToken()
            <input hidden="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <div class="form-group required">
                @*<label for="LoginName" class="col-md-2"><span class="label label-badge label-info">用户名</span></label>*@
                <input name="LoginName" type="text" class="form-control" placeholder="用户名" />
            </div>
            <div class="form-group required">
                @*<label for="LoginName" class="col-md-2"><span class="label label-badge label-info">密码</span></label>*@
                <input name="Password" type="password" class="form-control" placeholder="密码" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label><input type="checkbox" name="RememberMe" /><span class="label label-badge label-info">记住密码</span></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-block btn-primary" value="登录" />
            </div>
        </form>
    </div>
</body>

</html>

