@model _123TribeFrameworker.Models.RegisterViewModel
@{
    ViewBag.Title = "注册";
}
<div class="panel panel-primary">
    @Html.ValidationSummary(false)
    <div class="panel-heading" style="text-align:center">增加用户</div>
    @using (Html.BeginForm(new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="loginName" class="col-md-1">登录名:</label>
            @Html.TextBoxFor(x => x.loginName, new { @class = "from-control col-md-3" })
            <br />
        </div>
        <div class="form-group">
            <label for="userName" class="col-md-1">真实姓名:</label>
            @Html.TextBoxFor(x => x.userName, new { @class = "from-control col-md-3" })
            <br />
        </div>
        <div class="form-group">
            <label for="password" class="col-md-1">密码:</label>
            @Html.PasswordFor(x => x.Password, new { @class = "from-control col-md-3", id = "password" })<br />
        </div>
        <div class="form-group">
            <label for="confirmPassword" class="col-md-1">确认密码:</label>
            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "from-control col-md-3", id = "confirmPassword" })<br />
        </div>
        <div class="form-group">
            <label for="email" class="col-md-1">邮箱:</label>
            @Html.TextBoxFor(x => x.email, new { @class = "from-control col-md-3" })
            <br />
        </div>
        <div class="form-group">
            <label for="phoneNumber" class="col-md-1">电话:</label>
            @Html.TextBoxFor(x => x.phoneNumber, new { @class = "from-control col-md-3" })
            <br />
        </div>
            <button class="btn btn-primary" type="submit">注册</button>
            @Html.ActionLink("返回", "Index", "Account", new { @class = "btn btn-primary" })
    }
</div>


