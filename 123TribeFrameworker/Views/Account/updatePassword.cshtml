@using _123TribeFrameworker.Models
@model UpdatePasswordView
@{
    ViewBag.Title = "修改密码";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 style="text-align:center">@User.Identity.Name</h4>
    </div>
    @using (Html.BeginForm(new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(x => x.id)
        <div class="panel-body">
            <div class="form-group">
                <label for="beforPassword" class="col-md-1">原密码：</label>
                @Html.TextBoxFor(x => x.beforPassword, new { @class = "from-control col-md-3" })
                <br />
            </div>
            <div class="form-group">
                <label for="Password" class="col-md-1">密码：</label>
                @Html.PasswordFor(x => x.Password, new { @class = "from-control col-md-3" })
                <br />
            </div>
            <div class="form-group">
                <label for="ConfirmPassword" class="col-md-1">确认密码：</label>
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "from-control col-md-3" })
                <br />
            </div>
            <button class="btn btn-primary" type="submit">保存</button>
            @Html.ActionLink("返回", "edit", "Account", new { userId = Model.id }, new { @class = "btn btn-primary" })
        </div>
    }

</div>