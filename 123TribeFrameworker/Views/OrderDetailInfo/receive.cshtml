@using _123TribeFrameworker.Entity
@model List<OrderDetailInfo>
@{
    ViewBag.title = "订单入库";
}
<div style="color:red">
    @Html.ValidationSummary(false)
</div>
<div class="panel panel-primary">
    <div class="panel-heading" style="text-align:center">
        <h3>订单入库</h3>
    </div>
    <div class="panel-body">
        <form class="form-horizontal" action="/OrderDetailInfo/receiveOrder" method="post">
            @foreach (var item in Model)
            {
                @Html.Hidden("materialId", item.materialId)
                @Html.Hidden("orderNo",item.orderNo)
                @Html.Hidden("receivedOrder")
                <div class="form-group">
                    <label class="col-md-1">产品名称:</label>
                    <div class="col-md-2">
                        <input class="form-control" type="text" readonly="readonly" value="@item.materialName"/>
                    </div>
                    <label for="countReference" class="col-md-1">应收数量:</label>
                    <div class="col-md-1">
                        <input class="form-control" type="number" readonly="readonly" value="@item.num" name="countReference" />
                    </div>
                    <div>
                        <label for="count" class="col-md-1">实收数量:</label>
                        <div class="col-md-1">
                            @*<input class="form-control" type="number" value="@item.num" name="countReal" />*@
                        </div>
                    </div>
                    <label class="col-md-1">参考进价:</label>
                    <div class="col-md-1">
                        <input class="form-control" type="number" readonly="readonly" value="@item.materialInfo.referencePriceIn" />
                    </div>
                    <div>
                        <label for="priceIn" class="col-md-1">实际进价:</label>
                        <div class="col-md-1">
                            <input class="form-control" type="number" value="@item.materialInfo.referencePriceIn" name="priceIn"  />
                        </div>
                    </div>
                </div>
                <hr>
            }
            <div class="col-md-6">
                @Html.ActionLink("返回", "Index", "OrderInfo", null, new { @class = "btn btn-primary btn-block" })
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary btn-block">收货</button>
            </div>
        </form>
    </div>
</div>
