@using _123TribeFrameworker.Models.DirModels
@model RoleMenuEdit
    @{ 
        ViewBag.title = "权限增加";
    }
    <script type="text/javascript">
        $(function () {
            $("select[name='roleId']").change(function () {
                var roleId = $("select[name='roleId']").val();
                location.href = "/RoleMenu/addMenu?roleId=" + roleId;
            })
        })
    </script>
@using (Html.BeginForm())
{
    @Html.DropDownList("roleId",ViewBag.DropDown as IEnumerable<SelectListItem>,new {@class= "chosen-select form-control"})
    <div class="panel panel-primary">
        <div class="panel-heading">一级目录</div>
        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>菜单</th>
                        <th width="20%">选择</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.firstDirs.Count() == 0)
                    {
                        <tr>
                            <td style="text-align:center" colspan="2">角色拥有所有权限</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.firstDirs)
                        {
                            <tr>
                                <td>@item.menuName</td>
                                <td>
                                    <input type="checkbox" value="@item.menuId" name="firstDirIds" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">二级目录</div>
        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>菜单</th>
                        <th  width="20%">选择</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.secondDirs.Count() == 0)
                    {
                        <tr>
                            <td style="text-align:center" colspan="2">角色拥有所有权限</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.secondDirs)
                        {
                            <tr>
                                <td>@item.menuName</td>
                                <td>
                                    <input type="checkbox" value="@item.menuId" name="secondDirIds" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">增加</button>
    @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-default" })
}



